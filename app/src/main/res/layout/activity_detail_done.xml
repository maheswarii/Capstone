<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ui.detail.DetailDoneActivity">

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/note"
        android:fontFamily="@font/karla_bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_note_detail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/karla_bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_note"
        app:layout_constraintEnd_toEndOf="@+id/tv_note"
        app:layout_constraintTop_toBottomOf="@+id/tv_note"/>

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/karla_bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text="@string/photo"
        app:layout_constraintStart_toStartOf="@+id/tv_note_detail"
        app:layout_constraintEnd_toEndOf="@+id/tv_note_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_note_detail"/>

    <ImageView
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:background="@color/grey"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_photo"/>

</androidx.constraintlayout.widget.ConstraintLayout>